.banner {
  width: 100%;
  height: 600px;
  margin-top: -5px;
  background-image: url('<%= asset_path("flash.jpg") %>');
  background-repeat: no-repeat;
}

#banner-content {
  padding-top: 130px;
}

.full-width {
   width: 100%;
   margin-left: auto;
   margin-right: auto;
   max-width: initial;
   height: 100% !important;
}

h1 {
  color: white;
  font-family: Impact, Charcoal, sans-serif;
  text-align: center;
  font-size: 90px;
  margin-bottom: 20px;
  text-shadow: 2px 2px #000000;
}

h3 {
  color: white;
  margin-bottom: 40px;
}

.fa {
  color: white;
  margin-bottom: 80px;
}

.fa:hover {
  color: #C0C0C0;
}

.subtitle {
  color: white;
  font-family: Impact, Charcoal, sans-serif;
  text-align: center;
  font-size: 35px;
  margin-top: 5px;
  margin-bottom: 200px;
  text-shadow: 2px 2px #000000;
}

a:visited {
  text-decoration: none;
}

.large-4.columns {
  text-align: center;
}

.row {
  padding-top: 40px;
}

.devise-forms {
  padding-top: 50px;
  padding-bottom: 10px;
  width: 50%;
  margin: auto;
}

.center-forms {
  padding-top: 0;
  padding-bottom: 0;
  width: 100%;
  margin: auto;
}

.flash, .flash.flash-notice {
  background-color: #502B3E;
  text-align: center;
  color: white;
  height: 30px;
}

.friend-button {
  color: #ab9ba9;
}

.transactions, .friends-list {
  margin: 0;
  margin-top: -40px;
  padding: 0;
  text-align: center;
}

.transactions {
  margin-left: auto;
  margin-right: auto;
  max-width: initial;
  height: 100% !important;
}

.friends-panel {
  background-color: #4d394b;
  position:relative;
}

.transactions-panel {
  background-color: #f9f9f9;
  width: 100%;
  height: 100%;
  padding-top: 5px;
  padding-left: 50px;
  padding-bottom: 40px;
}

.panel {
  padding: 0;
}

.main-footer {
  margin-top: -40px;
  background-color: black;
  text-align: center;
  color: white;
}

#friends-title h5 {
  color: white;
  padding-top: 20px;
  font-weight: bold;
}

.friend-names {
  list-style-type: none;
  margin: 0 !important;
  padding: 0 !important;
}

.friend-names a:hover {
  color: white;
}

.search-friend-box {
  padding-left: 10px;
  padding-right: 10px;
  position: absolute;
  bottom: 5px;
}

.search-friend-box p {
  color: white;
}

.pages {
  position: relative;;
  bottom: 30px;
}

.friends-table {
  width: 100%;
  background-color: #4d394b;
  margin: 0;
  padding: 0;
  border: 1px dashed #351935;
}

.friends-table td{
  color: white;
}

.friends-table img {
  border-radius: 5px;
}

.friends-table:hover {
  background-color: #502B3E;
}

.account-page {
  margin: auto;
  padding-top: 20px;
  text-align: center;
  list-style-type: none;
}

.addresses-table {
  width: 100%;
  height: 70%;
}

.index-quote {
  margin: auto;
  padding-top: 100px;
  font-weight: bold;
  font-style: italic;
  width: 70%;
}

.friendship-pages {
  padding-top: 20px;
}

.chart iframe{
  position:absolute;
  top:0;
  left:0;
  width: 100%;
  height: 107%;
}

.chart {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}

.round-image img {
  border-radius: 200px;
}

.centered-item {
  margin: auto;
}

.account-padding {
  padding: 20px;
}
