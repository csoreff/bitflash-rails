.banner {
  width: 100%;
  height: 600px;
  margin-top: -5px;
  background-image: url('<%= asset_path("lightning.jpg") %> ');
  background-repeat: no-repeat;
}

#banner-content {
  padding-top: 130px;
}

.full-width {
   width: 100%;
   margin-left: auto;
   margin-right: auto;
   max-width: initial;
   height: 100% !important;
}

h1 {
  color: white;
  font-family: Impact, Charcoal, sans-serif;
  text-align: center;
  font-size: 90px;
  margin-bottom: 20px;
  text-shadow: 2px 2px #000000;
}

h3 {
  color: white;
  margin-bottom: 40px;
}

.fa {
  color: white;
  margin-bottom: 80px;
}

.fa:hover {
  color: #C0C0C0;
}

.subtitle {
  color: white;
  font-family: Impact, Charcoal, sans-serif;
  text-align: center;
  font-size: 35px;
  margin-top: 5px;
  margin-bottom: 200px;
  text-shadow: 2px 2px #000000;
}

a:visited {
  text-decoration: none;
}

.large-4.columns {
  text-align: center;
}

.row {
  padding-top: 40px;
}

.devise-forms {
  padding-top: 50px;
  padding-bottom: 10px;
  width: 50%;
  margin: auto;
}

.flash, .flash.flash-notice {
  background-color: gray;
  text-align: center;
  color: white;
  height: 30px;
}

.friend-button {
  margin-bottom: 2px !important;
  color: #ab9ba9;
}

.transactions, .friends-list {
  margin: 0;
  margin-top: -40px;
  padding: 0px;
  text-align: center;
}

.friends-panel {
  background-color: #4d394b;
  position:relative;
}

.transactions-panel {
  background-color: #f9f9f9;
}

.main-footer {
  margin-top: -40px;
  background-color: black;
  text-align: center;
  color: white;
}

#friends-title {
  color: white;
}

.friend-names {
  list-style-type: none;
}

.search-friend-box {
  padding-left: 15px;
  position: absolute;
  bottom: 0;
}

.search-friend-box p {
  color: white;
}
