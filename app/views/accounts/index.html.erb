<div class="small-12 medium-12 large-12 columns transactions data-equalizer-watch" role="content">
  <div class='round-image account-padding'>
    <%= gravatar_tag current_user.email, size: 200%>
  </div>
  <h5 class='account-padding'>Update your profile picture with <%= link_to 'Gravatar', 'https://en.gravatar.com/' %></h5>
  <table class="centered-item account-padding">
    <tbody>
      <tr>
        <td><h5>Balance:</h5></td>
        <td><h5><%= @balance %></h5></td>
      </tr>
      <tr>
        <td><h5>Pending:</h5></td>
        <td><h5><%= @pending_balance %></h5></td>
      </tr>
    </tbody>
  </table>
  <div class="account-padding">
    <%= link_to 'Change Password', edit_user_password_path, class: 'button submit-button' %>
    <%= link_to 'Withdraw/Send Funds', account_withdraw_path, class: 'button submit-button' %>
  </div>
</div>
