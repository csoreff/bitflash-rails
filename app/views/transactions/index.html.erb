<table class='addresses-table responsive'>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Date</th>
      <th>Type</th>
      <th>Address</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
      <tr id='btcaddress'>
        <td><%= transaction.user_id == current_user.id ? transaction.amount * -1 : transaction.amount %></td>
        <td><%= transaction.created_at %></td>
        <td><%= transaction.user_id == current_user.id ? "Outgoing" : "Incoming" %></td>
        <td><%= transaction.user_id == current_user.id ? Btcaddress.find(transaction.recipient_address_id).address : Btcaddress.find(transaction.sender_address_id).address %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @transactions %>

